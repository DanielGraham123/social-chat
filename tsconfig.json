{
    "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "outDir": "./dist",
      "baseUrl": ".",
      "declaration": true,
      "emitDeclarationOnly": true,
      "allowImportingTsExtensions": true,
      "paths": {
        "*": ["node_modules/*", "socket/*"]
      }
    },
    "ts-node": {
        "esm": true,
        "compilerOptions": {
          "module": "nodenext",
        }
    },
    "include": ["socket/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}
